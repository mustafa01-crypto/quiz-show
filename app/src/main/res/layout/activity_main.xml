<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="389dp"
        android:layout_height="310dp"
        app:srcCompat="@drawable/son"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/button"
        android:layout_width="411dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/button2"
        android:background="#99cccc "
        android:gravity="center"
        android:text="2018 Çıkmış sorular"
        tools:layout_editor_absoluteY="392dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="411dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@id/button4"
        android:background="#99cccc "
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="2016 çıkmış sorular"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="411dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
       android:layout_above="@id/button5"
        android:layout_height="wrap_content"
        android:background="#99cccc "
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="2014 Çıkmış Sorular"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/button6"
        android:background="#99cccc "
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="2012 Çıkmış Sorular"
        tools:layout_editor_absoluteY="547dp" />
    <Button
        android:id="@+id/button6"
        android:layout_width="411dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
       android:layout_above="@id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#99cccc "
        android:gravity="center"
        android:text="UYGULAMANIN AMACI"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="#99cccc "
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
       android:layout_above="@+id/adView"
        android:text="Çıkış Yap"
        android:gravity="center"
        tools:layout_editor_absoluteY="547dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-6313549492070266/2651696458"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>